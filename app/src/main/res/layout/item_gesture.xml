<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:padding="14dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/gestureEmoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/emoji_circle"
        android:text="ðŸ‘†" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp">

        <TextView
            android:id="@+id/gestureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gesture Name"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gestureFingers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fingers used"
            android:textColor="#00E5FF"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/gestureDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description of the action"
            android:textColor="#9E9E9E"
            android:textSize="11sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</LinearLayout>
